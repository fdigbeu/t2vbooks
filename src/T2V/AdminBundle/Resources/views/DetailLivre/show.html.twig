{% extends 'base.html.twig' %}

{% block body %}

	<div>{{ render(controller('T2VAdminBundle:Menu:index', {'active': app.request.get('_route')})) }}</div>
	
	<div class="container">

    <div class="page-header">
    	<h3 class="text-center">Information sur le contenu d'un nouveau livre</h3>
    </div>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ detailLivre.id }}</td>
            </tr>
            {% if detailLivre.categorie %}
            <tr>
                <th>Titre du sommaire</th>
                <td>{{ detailLivre.categorie.titre }}</td>
            </tr>
            {% endif %}
            {% if detailLivre.sousCategorie %}
            <tr>
                <th>Sous-Titre du sommaire</th>
                <td>{{ detailLivre.sousCategorie.titre }}</td>
            </tr>
            {% endif %}
            <tr>
                <th>Contenu</th>
                <td>{{ detailLivre.contenu }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="t2v_adminbundle">
        <li>
            <a class="btn btn-lg btn-info btn-block" href="{{ path('detaillivre_index') }}">Revenir Ã  la liste</a>
        </li>
        <li>
            <a class="btn btn-lg btn-primary btn-block" href="{{ path('detaillivre_edit', { 'id': detailLivre.id }) }}">Modifier</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input class="btn btn-lg btn-danger btn-block" type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>
    
    </div>
{% endblock %}
