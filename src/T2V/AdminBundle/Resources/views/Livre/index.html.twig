{% extends 'base.html.twig' %}

{% block body %}

	<div>{{ render(controller('T2VAdminBundle:Menu:index', {'active': app.request.get('_route')})) }}</div>
	
	<div class="container">

    <div class="page-header">
    	<h3 class="text-center">Afficher tous les titres de livres</h3>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for livre in livres %}
            <tr>
                <td>{{ livre.titre }}</td>
                <td>
                	<a class="btn btn-info btn-xs" href="{{ path('livre_show', { 'id': livre.id }) }}">Afficher</a>
                    <a class="btn btn-primary btn-xs" href="{{ path('livre_edit', { 'id': livre.id }) }}">Modifier</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="t2v_adminbundle">
        <li>
            <a class="btn btn-lg btn-primary btn-block" href="{{ path('livre_new') }}">Ajouter un nouveau titre de livre</a>
        </li>
    </ul>
    
    </div>
{% endblock %}
