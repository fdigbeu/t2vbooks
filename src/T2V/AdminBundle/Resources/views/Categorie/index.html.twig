{% extends 'base.html.twig' %}

{% block body %}

	<div>{{ render(controller('T2VAdminBundle:Menu:index', {'active': app.request.get('_route')})) }}</div>
	
	<div class="container">

    <div class="page-header">
    	<h3 class="text-center">Afficher tous les titres</h3>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Titre du livre</th>
                <th>Num√©ro</th>
